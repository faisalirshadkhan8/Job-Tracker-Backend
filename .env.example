# Job Application Tracker - Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# DJANGO SETTINGS
# ===========================================

# Generate a new secret key for production:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-here

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# DATABASE (PostgreSQL via Docker)
# ===========================================

DB_NAME=jobtracker
DB_USER=jobtracker_user
DB_PASSWORD=jobtracker_pass123
DB_HOST=localhost
DB_PORT=5432

# ===========================================
# CORS SETTINGS
# ===========================================

# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ===========================================
# CLOUDINARY (File Storage)
# ===========================================
# Get credentials from: https://cloudinary.com/console

CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===========================================
# AI SERVICES
# ===========================================

# Groq API - Get from: https://console.groq.com/
GROQ_API_KEY=your-groq-api-key

# Serper API (for web search) - Get from: https://serper.dev/
SERPER_API_KEY=your-serper-api-key

# AI Model to use
MODEL=groq/llama-3.3-70b-versatile

# ===========================================
# EMAIL (Resend)
# ===========================================
# Get API key from: https://resend.com/api-keys

RESEND_API_KEY=re_xxxxxxxxxx
DEFAULT_FROM_EMAIL=onboarding@resend.dev

# ===========================================
# FRONTEND URL
# ===========================================
# Used for email verification and password reset links

FRONTEND_URL=http://localhost:5173

# ===========================================
# REDIS (Caching & Rate Limiting)
# ===========================================
# Docker: redis://localhost:6379/0
# Production: Use your Redis provider URL

REDIS_URL=redis://localhost:6379/0

# ===========================================
# TWO-FACTOR AUTHENTICATION (2FA)
# ===========================================
# Name shown in authenticator apps (Google Authenticator, Authy, etc.)

TWOFA_ISSUER_NAME=JobTracker

# ===========================================
# WEBHOOKS
# ===========================================
# Webhook delivery settings

WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=3
